@{ this.ViewData["Title"] = "Add comment"; }
@model StarForums.Web.ViewModels.Comments.CommentInputModel
<div>
    <h1 class="text-center">Add comment to post</h1>
    <form method="post" class="text-center">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <textarea id="text-editor" asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="PostId" value="@Model.PostId"/>
        <button type="submit" class="btn btn-primary">Add comment</button>
    </form>
</div>