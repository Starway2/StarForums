@model StarForums.Web.ViewModels.Comments.EditCommentInputModel

@{
    this.ViewData["Title"] = Model.PostTitle;
}
<div>
    <h1 class="text-center">Edit comment</h1>
    <form method="post" class="text-center">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <textarea id="text-editor" asp-for="Content" class="form-control">@Model.CleanContent</textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="PostId" value="@Model.PostId" />
        <button type="submit" class="btn btn-primary">Finish editing</button>
    </form>
</div>
