@model StarForums.Web.ViewModels.Comments.CommentViewModel
@{
    this.ViewData["Title"] = "Delete Comment";
}
<div>
    <h3>
        Are you sure you want to delete this comment?
    </h3>
    <form method="post">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div>
            <button type="submit" asp-controller="Post" asp-action="DeleteComment" class="d-inline btn btn-sm btn-dark">Delete</button>
            <button class="d-inline btn btn-sm btn-outline-dark" onclick="javascript: history(-1).go">Cancel</button>
        </div>
    </form>
</div>
