@model StarForums.Web.ViewModels.Profile.ProfileViewModel
@{
    this.ViewData["Title"] = Model.Username;
}

<div class="text-center">
    <h2 class="m-0">Viewing profle - @Model.Username</h2>
    <div class="m-2">
        <img src="@Model.AvatarUrl" class="img-thumbnail img-profile" />
        @if (Model.Username == this.User.Identity.Name && this.User.Identity.IsAuthenticated)
        {
            <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="ChangeAvatar">
                <div class="mt-2">
                    <label for="file" class="btn btn-sm btn-dark text-light">Change profile picture</label>
                    <input type="file" id="file" name="file" accept="image/png, image/jpeg" class="d-none">
                </div>
                <button type="submit" class="btn btn-sm btn-outline-dark d-none" id="uploadImg">Upload</button>
            </form>
        }
    </div>
    <div>
        <span>Created on: @Model.CreatedOn</span>
    </div>
    <div>
        <span>Total comments: @Model.CommentsCount</span>
    </div>
    <div>
        <span>Total posts: @Model.PostsCount</span>
    </div>
    <div>
        <span>Email: @Model.Email</span>
    </div>
    <div class="m-2">
        <a class="btn btn-sm btn-dark text-light" asp-controller="Info" asp-action="Index" asp-route-u="@Model.Username">Personal info</a>
    </div>
</div>
