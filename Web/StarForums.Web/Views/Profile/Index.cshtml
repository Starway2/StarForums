@model StarForums.Web.ViewModels.Profile.ProfileViewModel
@{
}

<div class="text-center">
    <h2 class="m-0">Viewing profle - @Model.Username</h2>
    <div class="m-2">
        <img src="@Model.AvatarUrl" />
        <a asp-controller="Profile" asp-action="ChangeAvatar" class="btn btn-sm btn-outline-dark">Change</a>
    </div>
    <div>
        <span>Created on: @Model.CreatedOn</span>
    </div>
    <div>
        <span>Total comments: @Model.CommentsCount</span>
    </div>
    <div>
        <span>Total posts: @Model.PostsCount</span>
    </div>
    <div>
        <span>Email: @Model.Email</span>
    </div>
    @if (this.User.Identity.Name == this.Model.Username)
    {
        <div class="m-2">
            <a class="btn btn-sm btn-dark text-light" asp-controller="Profile" asp-action="Index">Settings</a>
        </div>
    }
</div>
