@model StarForums.Web.ViewModels.Info.UserInfoInputModel
@{
    ViewData["Title"] = Model.UserUsername;
}
<div class="container">
    <h4 class="text-dark text-center">Edit profile information</h4>
    <div class="row">
        <form method="post" class="form-group col text-center">

            <button type="submit" class="btn btn-sm btn-outline-dark text-center m-2 align-bottom">Save</button>
            <a asp-controller="Info" asp-action="Index" asp-route-u="@Model.UserUsername" class="btn btn-sm btn-outline-dark text-center m-2">Cancel</a>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-4 float-left align-top">
                <h4 class="mt-2">Personal information</h4>
                <hr />
                <div>
                    <label asp-for="Name" class="d-inline-block">Name</label>
                    <input asp-for="Name" type="text" class="form-control d-inline-block" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Gender" class="col-form-label">Gender</label>
                    <select asp-for="Gender" class="form-control">
                        <option value=""></option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Country" class="col-form-label">Country</label>
                    <input asp-for="Country" type="text" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="PhoneNumber" class="col-form-label">Phone number</label>
                    <input asp-for="PhoneNumber" type="tel" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="BirthDate" class="col-form-label">Birthday</label>
                    <input asp-for="BirthDate" type="date" min="1950-01-01" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>

            <div class="col-4 float-right align-top ">
                <h4 class="">Social information</h4>
                <hr />
                <div>
                    <label asp-for="Email" class="col-form-label">Email</label>
                    <input asp-for="Email" type="text" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Facebook" class="col-form-label">Facebook</label>
                    <input asp-for="Facebook" type="text" class="form-control" />
                    <span asp-validation-for="Facebook" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Twitter" class="col-form-label">Twitter</label>
                    <input asp-for="Twitter" type="text" class="form-control" />
                    <span asp-validation-for="Twitter" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Instagram" class="col-form-label">Instagram</label>
                    <input asp-for="Instagram" type="text" class="form-control" />
                    <span asp-validation-for="Instagram" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Skype" class="col-form-label">Skype</label>
                    <input asp-for="Skype" type="text" class="form-control" />
                    <span asp-validation-for="Skype" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <input type="hidden" asp-for="UserUsername" value="@Model.UserUsername" />
        </form>
    </div>
</div>